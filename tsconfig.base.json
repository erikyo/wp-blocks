{
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2017"],
		"target": "ES2017",
		"module": "ES2015",
		"moduleResolution": "node",

		"allowJs": true,
		"checkJs": true,

		"jsx": "react-jsx",
		"jsxImportSource": "react",

		"declaration": true,
		"composite": true,
		"noEmitOnError": true,
		"emitDeclarationOnly": true,

		"strictNullChecks": true,
		"noImplicitThis": true,
		"strictPropertyInitialization": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,

		"alwaysStrict": true,
		"newLine": "lf",

		"paths": {
			"@wp-blocks/create-block": ["./packages/create-block/src/index.ts"],
			"@wp-blocks/create-block-ts-template": ["./packages/create-block-ts-template/src/index.ts"],
			"@wp-blocks/scripts": ["./packages/scripts/src/index.ts"]
		}
	}
}
